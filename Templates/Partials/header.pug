- var categories = ['Home', 'Categories']

nav#mainHeader
    ul#headerNavigation
        each nav in categories
            li.navigationItem
                span= nav
   
    a(href="/")
        h1#pageTitle= "The Fastest Shop"
   
    ul#userNavigation
        if locals.session.user
            li.navigationItem
                span
                    a(href="/logout")= "Log out"
            li.navigationItem
                span 
                    a(href="/user")= locals.session.user.user
            li.navigationItem
                span
                    a(href="/cart")= "Cart"
            
        else
            li.navigationItem
                span
                    a(href="/login")= "Log in"
            li.navigationItem
                span 
                    a(href="/register")= "Register"
